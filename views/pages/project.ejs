<!DOCTYPE html>
<html>
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <% include ../partials/header.ejs %>
  <style>
    #nav {
        padding: 15px;
    }
    #logo {
        position: absolute;
        top: 20px;
        left: 30px;
        width: 50px;
        z-index: 10;
    }
    .next-btn {
        position: absolute;
        top: 50vh;
        right: 20px;
        width: 65px;
        border: 2px solid white;
        border-radius: 50%;
        z-index: 10;
    }
    .next-btn:hover {
        background-color: white;
        cursor: pointer;
    }
    .prev-btn {
        position: absolute;
        top: 50vh;
        left: 20px;
        width: 65px;
        border: 2px solid white;
        border-radius: 50%;
        z-index: 10;
    }
    .prev-btn:hover {
        background-color: white;
        cursor: pointer;
    }
    h1 {
        color: black;
        font-weight: 900;
        font-size: 36pt;
        font-family: Helvetica, Sans-Serif;
        letter-spacing: 3px;
        margin-top: 18px;
        text-align: left;
        padding: 5px 10%;
    }
    #author {
        font-family: 'Helvetica';
        font-size: 16pt;
        font-weight: 900;
        letter-spacing: 0.025em;
        color: #224d6d!important;
        line-height: 1em;
        padding: 10px 10%;
    }
    #info {
        font-size: 14pt;
    letter-spacing: 0.025em;
    line-height: 0em;
    margin-bottom: 30px;
        padding: 0px 10%;
        color: #777;
    }
    .content {
        padding-top: 80px;
        padding-left: 100px;
    }
    .paragraph-text {
        text-align: left;
        color: #224d6d;
        font-size: 14pt;
        font-family: Helvetica;
        line-height: 1.7;
        padding: 5px 10%;
    }
    #tag {
        color: white!important;
        padding: 5px;
        letter-spacing: 0.025em;
        font-family: Helvetica;
        font-weight: 900;
        margin-left: 10%;
    }
    #portrait {
        height: 100vh;
        display: block;
        margin: 0px auto;
    }
    #landscape {
        width: 100%;
        margin-top: 25%;
        padding-right: 120px;
    }
    .page-num {
        position: absolute;
        left: 35px;
        bottom: 30px;
        z-index: 5;
    }
  </style>
</head>

<body style="background-color: #dbdbdb; overflow: hidden;">
    <div class="">
        
        <% include ../partials/nav.ejs %>
        
        <!-- page number -->
        <img src="/pageNums/pageNumber-<%= pageNum %>.png" class="page-num">


        <!-- content -->
        <div class="row">
            <div class="col-md-6 content">
                <span id="tag" style="background-color:<%= tag1color %>;"><%= tag1 %></span>
                <span id="tag" style="background-color:<%= tag2color %>;margin-left:10px;"><%= tag2 %></span>
                <h1> <%= title %> </h1>
                <p id="author">By <a href="<%= authorLink %>"><%= author %> </a></p>
                <p id="info"> <%= info %> </p>
                <% for(var i=0; i<description.length; i++) {%>
                   <p class="paragraph-text"><%= description[i] %></p>
                <% } %>
            
            </div>
            <div class="col-md-6">
                <!-- if -->
                <% if (types == 'video') { %>
                    <iframe style="width: 100%; height: calc(50vw/1.77);margin-top: 25%;padding-right: 140px " src="<%= link %>" frameborder="0" allowfullscreen=""></iframe> 
                <% } else if (types == 'portrait') { %>
                    <img src="<%= link %>" id="portrait">  
                <% } else if (types == 'landscape') { %>
                    <img src="<%= link %>" id="landscape">
                <% } %>
            </div>
        </div> <!-- end row -->

    </div>
</body>
</html>
